<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/r_mainimage"
        android:layout_height="@dimen/r_mainimage"
        android:layout_margin="@dimen/magin_right_image"
        android:id="@+id/imageIntonation"
        android:src="@drawable/img0"
        app:civ_border_color="@color/colorLightTeal"
        app:civ_border_width="2dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_pronunciation"
        android:textStyle="bold"
        android:textColor="@color/colorLightTeal"
        android:id="@+id/txtCaseIntonation"/>
</LinearLayout>
