<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dic"
    tools:context="com.fragment.DictionaryFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/search_box_margin_top"
        android:textSize="@dimen/text_size_score"
        android:textColor="@color/color_White"
        android:layout_marginTop="@dimen/text_margin_top"/>

    <EditText
        android:id="@+id/editInput"
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="@dimen/edit_text_height"
        android:layout_below="@+id/textScore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/text_margin_top"
        android:background="@drawable/oval"
        android:drawableLeft="@drawable/ic_glasses"
        android:drawablePadding="@dimen/margin_top"
        android:ems="10"
        android:hint="Nhập từ cần tra"
        android:inputType="textPersonName"
        android:padding="@dimen/search_box_padding"
        android:textSize="@dimen/text_size_pronunciation" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_button"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/volume_margin_left"
        android:layout_marginLeft="@dimen/margin_leftofright"
        android:layout_below="@+id/editInput">

        <Button
            android:id="@+id/btnFind"
            android:layout_marginLeft="@dimen/height_button_practice"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="1"
            android:text="Tra từ"
            android:textColor="#FFFFFF"
            android:ems="15"
            />
        <Button
            android:id="@+id/videoAd"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/buttonshape"
            android:layout_marginLeft="@dimen/volume_margin_left"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="1"
            android:textColor="#FFFFFF"
            android:text="Them luot"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/text_margin_top"
        android:layout_below="@+id/layout_button"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_pronunciation"
            android:textColor="@color/colorLightTeal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textLexical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:textSize="@dimen/text_size_pronunciation"
            android:textColor="@color/primary" />

    </LinearLayout>


    <TextView
        android:id="@+id/textPronunciation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size_pronunciation"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/text_pronunciation_margin_top"
        android:textColor="@color/colorOrange"
        android:layout_below="@+id/layout_word"
        />

    <LinearLayout
        android:id="@+id/layout_mean"
        android:layout_marginLeft="@dimen/text_pronunciation_margin_top"
        android:layout_marginStart="@dimen/text_pronunciation_margin_top"
        android:layout_marginTop="@dimen/text_pronunciation_margin_top"
        android:layout_below="@+id/textPronunciation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textMean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_pronunciation"
            android:textColor="@color/primary"/>
    <TextView
        android:id="@+id/textMeaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_pronunciation"
        android:layout_marginLeft="@dimen/margin_left_pronun"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/text_pronunciation_margin_top"
        android:layout_marginStart="@dimen/text_pronunciation_margin_top"
        android:layout_marginTop="@dimen/text_pronunciation_margin_top"
        android:layout_below="@+id/layout_mean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textExam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_pronunciation"
            android:textColor="@color/primary"/>

        <TextView
            android:id="@+id/textsomething"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_pronunciation"
            android:layout_marginLeft="@dimen/margin_left_pronun"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pronunciation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/imageVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/volume_margin_left"
        />

    <ImageView
        android:id="@+id/imageRecordDic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/record_margin_bottom"
        android:layout_marginLeft="@dimen/volume_margin_left"
        />
    </LinearLayout>
</RelativeLayout>
